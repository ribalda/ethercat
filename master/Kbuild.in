obj-m := ec_master.o

ec_master-objs := \
	cdev.o \
    datagram.o \
    device.o \
    domain.o \
    fmmu_config.o \
    fsm_change.o \
    fsm_coe.o \
    fsm_coe_map.o \
    fsm_master.o \
    fsm_pdo_assign.o \
    fsm_pdo_mapping.o \
    fsm_sii.o \
    fsm_slave_config.o \
    fsm_slave_scan.o \
    mailbox.o \
    master.o \
    module.o \
    pdo.o \
    pdo_list.o \
    sdo.o \
    sdo_entry.o \
    sdo_request.o \
    slave.o \
    slave_config.o \
    sync.o

ifeq (@ENABLE_EOE@,1)
	ec_master-objs += ethernet.o
endif
ifeq (@ENABLE_DEBUG_IF@,1)
	ec_master-objs += debug.o
endif

REV := $(shell if test -s $(src)/../svnrevision; then \
		cat $(src)/../svnrevision; \
	else \
		svnversion $(src) 2>/dev/null || echo "unknown"; \
	fi)

CFLAGS_module.o := -DSVNREV=$(REV)

